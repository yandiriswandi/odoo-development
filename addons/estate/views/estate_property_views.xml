<odoo>
    <!-- Action -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Search -->
    <record id="estate_property_view_search_filter" model="ir.ui.view">
        <field name="name">estate.property.view_search.filter</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="date_availability" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />
                <field name="active" />
                <filter name="state" string="Available"
                    domain="[('state','in',['new','offer_received'])]" />
                <filter name='postcode' string="Postcode" context="{'group_by':'postcode'}" />
                <field name="description" />
            </search>
        </field>
    </record>
    <!-- Tree -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="date_availability" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />
                <field name="active" />
                <field name="state" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <!-- Form -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget='many2many_tags'></field>
                            <field name="property_type_id"></field>
                            <field name="postcode"></field>
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page name="Description" string="Description">
                            <group>
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="active" />
                                <field name="state" />
                            </group>
                        </page>
                        <page string="Offers">


                            <field name="offer_ids">

                            </field>

                            <!-- <field name="offer_ids" /> -->
                        </page>
                        <page name="Other Info" string="Other Info">
                            <group>
                                <field name="salesperson_id" string="Salesman"></field>
                                <field name="buyer_id"></field>
                            </group>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>